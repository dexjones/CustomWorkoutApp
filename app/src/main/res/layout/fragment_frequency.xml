<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/title_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How many days will you be working out?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- RadioGroup for frequency options -->
    <RadioGroup
        android:id="@+id/frequency_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title_frequency"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp">

        <!-- 3 days option -->
        <RadioButton
            android:id="@+id/radio_3_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 days per week"/>

        <!-- 4 days option -->
        <RadioButton
            android:id="@+id/radio_4_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 days per week"/>

        <!-- 5 days option -->
        <RadioButton
            android:id="@+id/radio_5_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 days per week"/>

        <!-- 6 days option -->
        <RadioButton
            android:id="@+id/radio_6_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 days per week"/>

    </RadioGroup>

    <!-- Finish Button -->
    <Button
        android:id="@+id/btn_finish_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
